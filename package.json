  "scripts": {
    "dev": "bun run scripts/dev.ts",
    "dev:server": "bun run --hot src/index.ts",
    "dev:webui": "cd webui && bun run dev",
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test tests",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "cd webui && bun run test:e2e",
    "check": "bun run typecheck && bun test tests && cd webui && bun run typecheck && bun run test --run && CI=true bun run test:e2e"
  },
