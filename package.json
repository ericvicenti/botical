    "node-pty": "^1.1.0",
    "simple-git": "^3.30.0",
    "yaml": "^2.8.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "vitest": "^4.0.18"
